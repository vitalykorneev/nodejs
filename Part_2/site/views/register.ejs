<% layout("main") %>
<% block("header", "Регистрация нового пользователя"); %>
<form action="/register" method="post" onsubmit="return checkPassword()">
	<fieldset>
		<ol>
			<li class="login">
				<label for="login">Логин</label><input type="text" name="login">
			</li>
			<li class="password">
				<label for="password">Пароль</label><input type="password" name="password" id="password">
			</li>
			<li class="password-confirm">
				<label for="password-confirm">Подтвердить пароль</label><input type="password" name="password-confirm" id="password-confirm">
			</li>
		</ol>
		<input type="submit" value="Зарегистрироваться">
	</fieldset>
</form>
<script>
	function checkPassword(){
		var p1 = document.getElementById("password");
		var p2 = document.getElementById("password-confirm");
		if(p1.value != p2.value){
			alert("Wrong password");
			return false;
		}else{
			document.forms[0].submit();
			return true;
		}
	}
</script>